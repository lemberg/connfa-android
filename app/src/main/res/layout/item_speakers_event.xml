<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/selector_light">

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="bottom"
    android:layout_marginLeft="16dp"
    android:background="@color/white_200" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <com.connfa.ui.view.FontTextView
      android:id="@+id/txtArticleName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_size_16"
      tools:text="Title"
      app:custom_font="@string/roboto_regular"
      android:textColor="@color/grey_500"
      android:gravity="center_vertical"
      android:textStyle="bold"
      android:layout_marginBottom="3dp" />

    <com.connfa.ui.view.FontTextView
      android:id="@+id/txtWhere"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="date"
      app:custom_font="@string/roboto_bold"
      android:textColor="@color/event_date"
      android:textSize="@dimen/text_size_small"
      android:layout_marginBottom="3dp" />

    <com.connfa.ui.view.FontTextView
      android:id="@+id/txtTrack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="track"
      app:custom_font="@string/roboto_regular"
      android:textColor="@color/grey_500"
      android:textSize="@dimen/text_size_small"
      android:layout_marginBottom="3dp"
      android:visibility="gone" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.connfa.ui.view.FontTextView
        android:id="@+id/txtExpLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Exp Level:"
        app:custom_font="@string/roboto_regular"
        android:textColor="@color/grey_500"
        android:visibility="gone"
        android:textSize="@dimen/text_size_small"
        android:layout_gravity="center" />

      <ImageView
        android:id="@+id/imgExpLevel"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_experience_beginner" />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
